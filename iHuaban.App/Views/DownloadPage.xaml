<Page
    x:Class="iHuaban.App.Views.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iHuaban.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource HBPageBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Padding="12" Background="{ThemeResource HBControlBackgroundBrush}">
            <Button Style="{StaticResource AutoPaddingButtonStyle}">
                <TextBlock FontSize="16">下载</TextBlock>
            </Button>

        </StackPanel>
        <Grid Grid.Row="1">
            <Image Width="400" Height="400" Source="ms-appx:///Assets/avatar.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"></Image>
            <Image Width="100" Height="100" Source="ms-appx:///Assets/biao.jpg" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"></Image>
        </Grid>
    </Grid>
</Page>
