<Page
    x:Class="iHuaban.App.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iHuaban.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="0 32 0 0" Background="{ThemeResource AppBackgroundAcrylicBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource AutoPaddingButtonStyle}" FontSize="16">关于</Button>
        <ListBox Grid.Row="1" ItemsSource="{Binding AboutList}" Background="{ThemeResource AppBackgroundAcrylicBrush}" Style="{StaticResource AboutListStyle}"></ListBox>
    </Grid>
</Page>
