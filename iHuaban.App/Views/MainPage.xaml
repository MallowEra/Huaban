                    </StackPanel>
                </PivotItem.Header>
                <PivotItem.Content>
                    <Grid></Grid>
                </PivotItem.Content>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE770;"/>
                        <TextBlock  FontSize="14" Padding="8 0 0 0">电脑</TextBlock>

                    </StackPanel>
                </PivotItem.Header>
                <PivotItem.Content>
                    <Grid></Grid>
                </PivotItem.Content>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE721;"/>
                        <TextBlock  FontSize="14" Padding="8 0 0 0">发现</TextBlock>

                    </StackPanel>
                </PivotItem.Header>
                <PivotItem.Content>
                    <Grid></Grid>
                </PivotItem.Content>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE77B;"/>
                        <TextBlock  FontSize="14" Padding="8 0 0 0">我的</TextBlock>

                    </StackPanel>
                </PivotItem.Header>
                <PivotItem.Content>
                    <Grid></Grid>
                </PivotItem.Content>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
