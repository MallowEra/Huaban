<HB:HBPage
	x:Class="Huaban.UWP.Views.MyPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:HB="using:Huaban.UWP.Controls"
	xmlns:local="using:Huaban.UWP.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
	xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
	NavigationCacheMode="Required"
	mc:Ignorable="d">
	<Grid Background="{StaticResource SystemControlBackgroundBaseLowBrush}">
		<Interactivity:Interaction.Behaviors>
			<Core:EventTriggerBehavior EventName="Loaded">
				<Core:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding ElementName=UserPage,Path=DataContext}"></Core:InvokeCommandAction>
			</Core:EventTriggerBehavior>
		</Interactivity:Interaction.Behaviors>
		<Grid.RowDefinitions>
			<RowDefinition Height="48"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<HB:TitleControl VerticalAlignment="Top"></HB:TitleControl>
		<local:UserPage Grid.Row="1" x:Name="UserPage"></local:UserPage>
	</Grid>
</HB:HBPage>
